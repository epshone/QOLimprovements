{
  "name": "appianTabs",
  "version": "0.1",
  "browser_action":
  {
    "default_icon": "assets/logo.png",
    "default_popup": "popup.html"
  },
  "background":
  {
    "scripts": ["js/request.js", "js/background.js", "js/key_event.js"]
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*"], // run for http & https pages
      "js": ["js/key_event.js"]// ,  // key_event.js is injected to the page, this handles key press
      // "run_at": "document_start" // run before everything else, else there will be conflicts at pages which accept keyboard inputs ( eg:google search)
    }
  ],
  "commands": {
    "open-db": {
      "suggested_key":{
        "default": "Alt+1"
      },
      "description": "Open DB"
    },
    "open-designer": {
      "suggested_key":{
        "default": "Alt+2"
      },
      "description": "Open Designer"
    },
    "open-design": {
      "suggested_key":{
        "default": "Alt+3"
      },
      "description": "Open Design"
    },
    "open-objects": {
      "description": "Open Design Objects"
    },
    "open-rule": {
      "suggested_key":{
        "default": "Alt+4"
      },
      "description": "Open Design Rule"
    },
    "open-tempo": {
      "description": "Open Tempo"
    },
    "open-admin": {
      "description": "Open Admin"
    },
    "open-interface": {
      "description": "Open Interface"
    }
  },
  "manifest_version": 2
}
